a,b=map(int,input().split(' '))
for i in range(0,int((a-1)/2)):
     print (('.|.'*i).rjust(int((b-2)/2),'-')+'.|.'+('.|.'*i).ljust(int((b-2)/2),'-'))
print ('WELCOME'.center(b,'-'))
for i in reversed (range (0,int((a-1)/2))):
     print (('.|.'*i).rjust(int((b-2)/2),'-')+'.|.'+('.|.'*i).ljust(int((b-2)/2),'-'))
